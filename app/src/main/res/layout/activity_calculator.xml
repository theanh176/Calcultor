<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityCalculator"
    android:background="@color/white">


    <TextView
        android:id="@+id/txtKetqua"
        android:layout_height="120dp"
        android:layout_width="400dp"
        android:hint="0"
        android:textSize="45dp"
        android:gravity="bottom|right"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">
        <Button
            android:id="@+id/btnTrai"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:text="("
            android:textSize="25dp"/>
        <Button
            android:id="@+id/btnPhai"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:text=")"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/btnPhanTram"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:text="%"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/btnAC"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:text="AC"
            android:textSize="25dp"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">
        <Button
            android:id="@+id/btn7"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:text="7"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/btn8"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:text="8"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/btn9"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:text="9"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/btnChia"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:text="/"
            android:textSize="25dp"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">
        <Button
            android:id="@+id/btn4"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:text="4"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/btn5"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:text="5"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/btn6"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:text="6"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/btnNhan"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:text="x"
            android:textSize="25dp"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">
        <Button
            android:id="@+id/btn1"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:text="1"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/btn2"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:text="2"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/btn3"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:text="3"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/btnTru"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:text="-"
            android:textSize="25dp"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">
        <Button
            android:id="@+id/btn0"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:text="0"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/btnCham"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:text="."
            android:textSize="25dp"/>
        <Button
            android:id="@+id/btnKq"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:text="="
            android:textSize="25dp"/>
        <Button
            android:id="@+id/btnCong"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:text="+"
            android:textSize="25dp"/>
    </TableRow>

</TableLayout>